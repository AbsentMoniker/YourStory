<% provide(:title, "Sign in") %>
<h1>Create New Story</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for @story, url: stories_url do |f| %>
    
    <%= f.label :Title %>
    <%= f.text_field :title %>

    <%= f.label :Story %>
    <%= f.text_area :body %>

    <%= f.submit "Submit Story", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
